<div id="search-box">
  <div id="search">
    <form action="" class="search-form">
      <div id="form-fields">
        <div class="form-item">
          <input
            class="form-control form-input location"
            type="text"
            id="location"
            placeholder="Destinazione"
          />
        </div>
        <div class="form-item">
          <input
            type="text"
            autocomplete="off"
            id="check-in"
            class="form-control form-input isEmpty"
            placeholder="Check-in"
            readonly
          />
