<form action="" class="search-form">
  <div id="form-fields">
    <div class="form-item">
      <input
        class="form-control form-input location"
        type="text"
        id="location"
        placeholder="Destinazione"
      />
    </div>
    <div class="form-item">
      <input
        type="text"
        autocomplete="off"
        id="check-in"
        class="form-control form-input isEmpty"
        placeholder="Check-in"
        readonly
      />
    </div>
    <div class="form-item">
      <input
        type="text"
        autocomplete="off"
        id="check-out"
        class="form-control form-input isEmpty"
        placeholder="Check-out"
        readonly
      />
    </div>
    <div class="form-item">
      <input
        class="form-control form-input form-select"
        id="guestNum"
        type="number"
        min="1"
        max="50"
        size="4"
        maxlength="4"
        placeholder="Ospiti"
      />
    </div>
  </div>
  <div id="form-button">
    <button>
      <img src="/assets/icons/search_icon_white.png" alt="Cerca" />
    </button>
  </div>
</form>
