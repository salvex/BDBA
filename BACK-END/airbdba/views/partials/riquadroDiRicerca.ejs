<div id="search-box">
  <div id="search">
    <form action="" class="search-form">
      <div id="form-fields">
        <div class="form-item">
          <input
            class="form-control form-input location"
            data-toggle="tooltip"
            data-placement="top"
            title="Inserisci una destinazione!"
            type="text"
            id="location"
            placeholder="Destinazione"
          />
        </div>
        <div class="form-item">
          <input
            type="text"
            autocomplete="off"
            id="check-in"
            class="form-control form-input isEmpty"
            placeholder="Check-in"
            readonly
          />
        </div>
        <div class="form-item">
          <input
            type="text"
            autocomplete="off"
            id="check-out"
            class="form-control form-input isEmpty"
            placeholder="Check-out"
            readonly
          />
        </div>
        <div class="form-item">
          <input
            class="form-control form-input form-select"
            id="guestNum"
            type="number"
            min="1"
            max="50"
            size="4"
            maxlength="4"
            placeholder="Ospiti"
          />
        </div>
      </div>
      <div id="form-button">
        <button>
          <img src="/assets/icons/search_icon_white.png" alt="Cerca" />
        </button>
      </div>
    </form>
  </div>
  <div id="filters">
    <p>
      <a
        id="filter-btn"
        data-toggle="collapse"
        href="#collapseExample"
        role="button"
        aria-expanded="false"
        aria-controls="collapseExample"
      >
        <img
          id="plus-btn"
          src="/assets/icons/add.png"
          style="width: 16px; height: 16px"
        />
      </a>
      <i><strong>filtri</strong></i>
    </p>
    <div class="collapse" id="collapseExample">
      <div class="card card-body filters">
        <div class="alert alert-info" role="alert">
          Scegli i servizi che fanno al caso tuo!
        </div>
        <div class="row align-items-center">
