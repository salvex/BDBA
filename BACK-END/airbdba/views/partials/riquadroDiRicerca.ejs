                <div class="custom-control custom-switch">
                  <input
                    type="checkbox"
                    class="custom-control-input"
                    id="casa"
                  />
                  <label class="custom-control-label" for="casa"
                    >Casa vacanza&nbsp;&nbsp;<i class="fas fa-home"></i>
                  </label>
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col-12">
