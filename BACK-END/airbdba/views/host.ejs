<!DOCTYPE html>
<html>
  <%- include("./partials/head.ejs", {title: "Host"}) %>
  <body>
    <%- include("./partials/nav.ejs") %>

    <div class="container-fluid host-container">
      <div class="row justify-content-center host-container-row">
        <div class="col-sm-12 col-md-10">
          <ul class="nav nav-tabs" id="myTab" role="tablist">
            <li class="nav-item" role="presentation">
              <a
                class="nav-link active"
                id="home-tab"
                data-toggle="tab"
                href="#home"
                role="tab"
                aria-controls="home"
                aria-selected="true"
                >Host</a
              >
            </li>
            <li class="nav-item" role="presentation">
              <a
                class="nav-link"
                id="visualizza-inserzioni-tab"
