        const checkout = $("#inputFin").val();
        console.log(checkin, checkout);
        const checkinDate = new Date(checkin);
        const checkoutDate = new Date(checkout);
        if (checkoutDate < checkinDate) {
          $("#inputFin").datepicker("update", checkin);
        }
      }
      $("#inputFin").focus();
    });
    // Fine disponibilitÃ 
