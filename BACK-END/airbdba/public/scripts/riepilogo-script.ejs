      console.log(worker); */

      fetch(
        `/inserzione/prenota/riepilogo${window.location.search}&prezzo=<%= prenotazione.prezzo_finale %>`,
        {
          method: "POST",
          headers: { "Content-Type": "application/json" },
        }
      )
        .then(async (res) => {
          const response = await res.json();
          if (response.success) {
            $("#successFailure")
